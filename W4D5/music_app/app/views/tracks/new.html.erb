<h2>This is the page for creating new tracks (from Track#new)!</h2>


<form class="" action="<%= tracks_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="title">Title</label>
    <input type="text" name="track[title]" id="title" value="">
  <br/>

  <label for="ord">Track Number</label>
    <input type="text" name="track[ord]" id="ord" value="">
  <br/>

  <label for="album">Album</label>
    <select name="track[album_id]">
      <option selected disabled>Choose Band</option>
      <% albums = Album.all %>
      <% albums.each do |album| %>
        <option value="<%= album.id %>" <%= "selected" if params[:album_id].to_i == album.id %>><%= album.title %></option>
      <% end %>
    </select>
  <br/>

  <label for="track_type">Track Type</label>
    <input type="radio" name="track[regular_track]" value="true">Regular<br>
    <input type="radio" name="track[regular_track]" value="false">Bonus<br>
  <br/>

  <label for="lyrics">Lyrics</label>
    <textarea name="track[lyrics]" rows="8" cols="80"></textarea>
  <br/>

  <input type="submit" value="Create Track">
</form>
