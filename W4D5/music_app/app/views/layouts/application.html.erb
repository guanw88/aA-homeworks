<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <h1>Music App</h1>
    <% if logged_in?%>
      <p>Welcome, <%= current_user.email %>!</p>
      <form class="" action="<%= session_url %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="submit" name="" value="Log Out">
      </form>
    <% else %>
      <p>Welcome, Guest!</p> <form class="" action="<%= session_url %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <label for="email">Email</label>
          <input type="text" name="user[email]" id="email" value="">

        <label for="password">Password</label>
          <input type="text" name="user[password]" id="password" value="">

        <input type="submit" value="Log In">
      </form>
    <% end %>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
